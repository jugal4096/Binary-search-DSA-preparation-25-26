#include <iostream>
using namespace std;
void insertionsort(int arr[],int n){
    for(int i = 1 ; i <n ; i++){
        int key = arr[i];
        int j = i -1;
        while(j>=0 && arr[j]>key){
            arr[j+1]=arr[j];
            j--;
        }
        arr[j+1]=key;
        cout <<"Pass "<<i<<" : ";
        for(int k = 0 ; k <n ; k++){
            cout <<arr[k]<<" ";
        }
    cout<<endl;
    }
    cout<<"Sorted array is : ";
    for(int i = 0 ; i <n ; i ++){
        cout <<arr[i]<<" ";
    }
}
int main(){
    int arr[]={34,21,31,76,45,20,81};
    int n = sizeof(arr)/sizeof(arr[0]);
    insertionsort(arr,n);
}
