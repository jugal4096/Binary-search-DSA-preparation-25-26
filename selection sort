#include <iostream>
using namespace std;
void selectionsort(int arr[],int n){
    int temp;
    
    for(int i = 0 ; i < n ; i ++){
        for(int j = i+1 ; j < n ; j ++){
            if(arr[i]>arr[j]){
             temp = arr[i];
             arr[i]=arr[j];
             arr[j]=temp;
             
             }else{
                 break;
             }
             
        }
        cout <<"Pass "<<i+1<<" :  ";
             for(int p = 0 ; p < n ; p ++){
                cout <<arr[p]<<" ";
            
            }
        cout <<endl;
       
    }
    
    cout <<"Sorted array is : ";
    for(int k = 0 ; k <n ; k ++){
        cout <<arr[k]<<" ";
    }
}
int main(){
    int arr[]={12,45,21,43,78,51};
    int n = sizeof(arr)/sizeof(arr[0]);
    selectionsort(arr,n);
}
