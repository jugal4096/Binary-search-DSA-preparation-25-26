#include <iostream>
using namespace std;
void mergesort(int arr[],int s,int m,int e){
   int n1 = m-s+1;
    int n2 = e-m;
    int a[n1],b[n2];
    for(int i = 0 ; i < n1 ; i ++){
        a[i]=arr[s+i];
    }
    for(int j = 0 ; j < n2 ; j ++){
        b[j]=arr[m+1+j];
    }
    int i =0,j =0,k=s;
    while(i < n1 && j <n2){
        if(a[i]<b[j]){
            arr[k]=a[i];
            i++;
        }else{
            arr[k]=b[j];
            j++;
        }
        k++;
    }
    while(i <n1){
        arr[k]=a[i];
        i++;
        k++;
    }
    while(j <n2){
        arr[k]=b[j];
        j++;
        k++;
    }
}
void merge(int arr[],int s,int e){
    if(s>=e){
        return ;
    }
   int m = (e+s) / 2;
    merge(arr,s,m);
    merge(arr,m+1,e);
    mergesort(arr,s,m,e);
    
}
int main(){
    int arr[]={90,64,34,21,89,66};
    int n = sizeof(arr)/sizeof(arr[0]);
    merge(arr,0,n-1);
    cout <<"Sorted array is : ";
    for(int i = 0 ; i < n ; i ++){
        cout <<arr[i]<<" ";
    }
    
}
